FROM node:alpine

#Autor
MAINTAINER Pablo Martin-Moreno Ruiz <pmmr1990@gmail.com>

#Actualizar Sistema Base
RUN apk update && apk upgrade


RUN adduser -S -g wheel CineForYou
USER CineForYou

RUN mkdir -p /home/defesti/CineForYou
WORKDIR /home/defesti/CineForYou

# Instalar Python 
RUN apk add python-setuptools
RUN apk add python-dev
RUN apk add build-essential
RUN apk add python-psycopg2
RUN apk add libpq-dev
RUN easy_install pip
RUN pip install --upgrade pip
RUN pip install Django
